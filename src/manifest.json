{
    "name": "Copy URL",
    "version": "2.0",
    "permissions": [
      "activeTab",
      "clipboardRead",
      "clipboardWrite",
      "contextMenus", 
      "tabs", 
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Copy URL",
      "default_icon": {
        "64": "images/logo.png"
    }
  },
    "manifest_version": 2
  }